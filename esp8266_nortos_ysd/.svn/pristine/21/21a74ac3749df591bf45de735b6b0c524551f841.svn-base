	hdr = (ucph_t *)s->rcv_buf;

	if (is_reset_pkt(hdr)) {
		CLIENT_ERROR("%s reset by peer\n", s->name);
		ucdc_set_status(s, UCCS_AUTH_REQ);
		return;
	}

	if (hdr->command != CMD_UDP_AUTH) {
